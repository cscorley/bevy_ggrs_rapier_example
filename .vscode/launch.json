  "version": "0.2.0",
  "configurations": [
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug executable 'bevy_ggrs_rapier_example'",
      "cargo": {
        "args": [
          "build",
          "--bin=bevy_ggrs_rapier_example",
          "--package=bevy_ggrs_rapier_example",
          "--features",
          "debug"
        ],
        "filter": {
          "name": "bevy_ggrs_rapier_example",
          "kind": "bin"
        }
      },
      "env": {
        "RUST_BACKTRACE": "1",
        "CARGO_MANIFEST_DIR": "${workspaceFolder}" // Make sure we find assets folder at root
      },
      "args": [],
      "cwd": "${workspaceFolder}"
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug unit tests in executable 'bevy_ggrs_rapier_example'",
      "cargo": {
        "args": [
          "test",
          "--no-run",
          "--bin=bevy_ggrs_rapier_example",
          "--package=bevy_ggrs_rapier_example"
        ],
        "filter": {
          "name": "bevy_ggrs_rapier_example",
          "kind": "bin"
        }
      },
      "args": [],
      "cwd": "${workspaceFolder}"
    }
  ]
}
